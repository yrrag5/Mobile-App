<Page
    x:Class="MathGame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background ="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <TextBlock x:ConnectionId='4' x:Name="Title" Text="Test Your Luck!" Foreground="White" FontWeight="ExtraBold"
                      TextWrapping="Wrap" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock x:ConnectionId='3' x:Name="txtHighScore" Text="High Score : 0" Foreground="White" FontWeight="ExtraBold" TextWrapping="Wrap"
                       FontSize="27" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
                </TextBlock> 
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Vertical">
                    <Button x:ConnectionId='1' x:Name="start" BorderBrush="ForestGreen" BorderThickness="4" Background="Green" Content="Start"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40 10 40 10" Foreground="White" FontWeight="ExtraBold" FontSize="30"                    />
                    <Button x:ConnectionId='2' x:Name="option" BorderBrush="ForestGreen" BorderThickness="4" Background="Red" Content="Options"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20 10 20 10" Foreground="White" FontWeight="ExtraBold" FontSize="30"                     />
                </StackPanel>
            </Grid>
            
        </Grid>
            

        </Grid>
</Page>

